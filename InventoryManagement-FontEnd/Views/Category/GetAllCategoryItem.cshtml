@model IEnumerable<InventoryManagement_FontEnd.Models.CategoryItemResponsecs>

@{
    ViewData["Title"] = "GetAllCategoryItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAllCategoryItem</h1>

@foreach (var category in Model)
{
    <h3>@category.Name - Created on: @category.CreatedOn.ToShortDateString()</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>Threshold Quantity</th>
                <th>Available</th>
                <th>Deleted</th>
                <th>Created On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in category.items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td><img src="@item.ImageUrl" alt="@item.Name" width="50" /></td>
                    <td>@item.ThresholdQuantity</td>
                    <td>@item.IsAvailable</td>
                    <td>@item.DeleteFlag</td>
                    <td>@item.CreatedOn.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
}

